<h2>Available drones</h2>
<a class="btn btn-primary" href="/drones/create-form">New Drone</a>

<hr>
{{#each drones as |drone|}}
  <div class="border mb-3 p-2">
    <p>{{drone.name}}</p>
    <small>Propellers:{{drone.propellers}}</small>
    <small>Max speed:{{drone.maxSpeed}}</small>
    <a href="/drones/{{drone.id}}/update-form" class="btn btn-primary mb-2"> Edit</a>
   <form action="/drones/{{drone.id}}/delete" method="POST">
    <button class="btn btn-danger">DELETE</button>
</form>
  </div>
 
{{/each}}