<h2>Update the drone</h2>

<form action="/drones/{{drone.id}}" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">drone name</label>
    <input value="{{drone.name}}" name="name" type="text" class="form-control" id="name" />
  </div>

  <div class="mb-3">    
    <label for="propellers" class="form-label">propellers</label>
    <input value="{{drone.propellers}}" name="propellers" type="text" class="form-control" id="propellers" />
  </div>

  <div class="mb-3">
     <label for="maxSpeed" class="form-label">maximum speed</label>
     <input value="{{drone.maxSpeed}}" name="maxSpeed" type="text" class="form-control" id="maxSpeed" />
  </div>
  
  <button type="submit" class="btn btn-primary">Update</button>
</form>